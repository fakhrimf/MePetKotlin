<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img_detail_tips"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_226sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/smudge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/title_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_178sdp"
        android:layout_marginLeft="@dimen/_9sdp"
        android:fontFamily="@font/baloo_thambi"
        android:text="@string/cara_merawat_kucing"
        android:textColor="#fff"
        android:textSize="@dimen/_19ssp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/image_tips"
        android:layout_width="@dimen/_99sdp"
        android:layout_height="@dimen/_139sdp"
        app:cardCornerRadius="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_129sdp"
        android:layout_marginRight="@dimen/_14sdp"
        app:cardUseCompatPadding="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_pets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_menu_manage"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/detail_pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_thambi"
        android:text="@string/teks_rawat"
        android:textSize="@dimen/_13ssp"
        android:layout_margin="@dimen/_19sdp"
        android:layout_marginTop="@dimen/_90sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_tips"/>

</androidx.constraintlayout.widget.ConstraintLayout>